  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "argsExpansion": "none",
      "program": "${workspaceRoot}/node_modules/@cucumber/cucumber/bin/cucumber-js",
      "args": [
        "${workspaceRoot}/src/features",
        "--require",
        "cucumber.conf.js",
        "--require",
        "src/step_definitions",
        "--format",
        "json:report/cucumber_report.json",
        "--tags",
        "@debug",
        "--world-parameters",
        "{\"browser\":\"docker.edge\"}"
      ]
    }
  ]
}
