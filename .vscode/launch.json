    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug",
        "program": "${workspaceRoot}/node_modules/cucumber/bin/cucumber-js",
        "args": [
          "${workspaceRoot}/src/features",
          "--require",
          "cucumber.conf.js",
          "--require",
          "src/step_definitions",
          "--env",
          "chrome",
          "--format",
          "json:report/cucumber_report.json",
          "--tags",
          "@debug"
        ]
      }
    ]
  }
  